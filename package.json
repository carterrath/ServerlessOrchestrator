{
  "version": "0.0.0",
  "scripts": {
    "start": "concurrently --kill-others \"npm run start-frontend\" \"npm run start-backend\"",
    "start-frontend": "cd presentation && npm run dev",
    "start-backend": "go run main.go",
    "format": "npx prettier --write ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.4.1"
  }
}
